<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body>
  <main>
    <div class="jumbotron">
      <div class="container-lg">

        <div class="Navigation">
          <!-- Filter -->
          <form action="/uData" method="post">
            <div class="filter py-4">
              <select name="month" id="month" onchange="onSelect()">
                <% if(month=="1" ) { %>
                <option value="1" id="1" selected>January</option>
                <option value="2" id="2">February</option>
                <option value="3" id="3">March</option>
                <% } else if(month=="2" ) {%>
                <option value="1" id="1">January</option>
                <option value="2" id="2" selected>February</option>
                <option value="3" id="3">March</option>
                <% } else if(month=="3" ) {%>
                <option value="1" id="1">January</option>
                <option value="2" id="2">February</option>
                <option value="3" id="3" selected>March</option>
                <% } %>
              </select>
            </div>
          </form>
          <div class="pagination">
            <%- include('../../partials/paginationDynamic'); %>
          </div>
        </div>

        <table border="1">
          <tr>
            <th>Student ID</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Present Days</th>
            <th>Total Day</th>
            <th>Attendance Percentage</th>
            <!-- <th>Present</th> -->
          </tr>
          <% for(let i=0; i < data.length; i++) { %>
          <tr>
            <td>
              <%= data[i].std_id %>
            </td>
            <td>
              <%= data[i].firstname %>
            </td>
            <td>
              <%= data[i].lastname %>
            </td>
            <td>
              <%= data[i].days %>
            </td>
            <td>
              <%= data[i].totalDay%>
            </td>
            <td>
              <%= data[i].percentage%>
            </td>
          </tr>
          <% } %>
        </table>
      </div>
    </div>
  </main>

  <footer><%- include('../../partials/footer'); %></footer>

  <script>
    // window.location = "?month=1";

    function onSelect() {
      window.location = "?month=" + document.getElementById("month").value;
    }
  </script>
</body>

</html>